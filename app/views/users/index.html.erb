<div class="body">
  <div class="container">
    <p id></p>
    <div class="row">
      <div class="col-lg-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :full, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
        <table class="table">
          <tboby>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tboby>
        </table>
        <div class="row">
          <%= link_to edit_user_path, class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
        </div>
        <h2>New Book</h2>
        <%= form_with model:@user, local: true do |f| %>
          <div class="field-row">
            <label for="title">Title</label>
            <%= f.text_field :title %>
          </div>
          <div class="field-row">
            <label for="opinion">Opinion</label>
            <%= f.text_area :opinion %>
          </div>
          <div class="actions-row">
            <%= f.submit "Create Book", class: 'btn btn-primary col-xs-12' %>
          </div>
      </div>
      <div class="col-lg-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, :full, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
              </td>
              <td>
                <span class="tbory"><%= book.title %></span>
              </td>
              <td>
                <span calss="tbody"><%= book.body %></span>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

