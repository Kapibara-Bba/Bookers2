    <%= form_with model:@user_show, local:true do |f| %>
      <div class="field">
        <label class="control-label sr-only" for="Name">Name</label>
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div class="field">
        <label class="control-label sr-only" for="ProfileImage">ProfileImage</label>
        <%= f.attachment_field :profile_image %>
      </div>
      <div class="field">
        <label class="control-label sr-only" for="Introduction">Introduction</label>
        <%= f.text_area :introduction %>
      </div>
      <%= f.submit "Update User" %>
    <% end %>
  </div>
</div>
