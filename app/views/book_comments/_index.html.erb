
<% book.book_comments.each do |comment| %>
  <tr>
    <td>
      <%= link_to user_path(comment.user) do %>
        <%= attachment_image_tag comment.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
        <%= comment.user.name %>
      <% end %>
      <%= comment.comment %>
      <% if current_user == comment.user %>
        <%= link_to "削除", book_book_comments_path(book), method: :delete, remote: true, "data-confirm" => "Are you sure?", class: 'btn btn-danger' %>
      <% end %>
    </td>
  </tr>
<% end %>
